{
  "$schema": "https://opencode.ai/config.json",
  "agent": {
    "build": {
      "mode": "primary",
      "small_model": "x-ai/grok-code-fast-1",
      "model": "anthropic/claude-haiku-4.5",
      "tools": {
        "write": true,
        "edit": true,
        "bash": true,
	"todowrite": true,
	"todoread": true,
	"mcp-*": true
      }
    },
    "plan": {
      "mode": "primary",
      "model": "anthropic/claude-sonnet-4.5",
      "tools": {
        "write": false,
        "edit": false,
        "bash": false,
	"todowrite": true,
	"todoread": true,
	"webfetch": true,
	"mcp-*": true
      }
    },
    "code-reviewer": {
      "description": "Reviews code for best practices and potential issues",
      "mode": "subagent",
      "model": "anthropic/claude-sonnet-4.5",
      "prompt": "You are a code reviewer. Focus on security, performance, and maintainability.",
      "tools": {
        "write": false,
        "edit": false,
	"todowrite": true,
	"todoread": true,
	"webfetch": true,
	"mcp-context7*": true
      }
    }
  },
  "mcp": {
    "mcp-context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp"
    }
  }
}
